@model SettingsViewModel

<h2>Innstillinger</h2>

<form asp-action="Update">
    @foreach (var setting in Model.Settings)
    {
        <div class="row">
            <div class="col-sm-2">
                Innstilling
            </div>
            <div class="col-sm-8">
                <input name="Setting.Value" value="@setting.Value"/>
            </div>
            <div class="col-sm-2">
                <input type="submit" class="btn btn-default" value="Lagre" />

            </div>
        </div>
        <input type="" name="CompanyId" value="@setting.CompanyId"/>
        <input type="" name="Setting.Key" value="@setting.Key"/>
        <input type="" name="Setting.Id" value="@setting.Id"/>
    }
</form>
